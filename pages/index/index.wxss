/* pages/index/index.wxss */
page {
  height: 100%;
  background-color: #8ed145;
}

.indexContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 200rpx; /* 1rpx = 1物理像素 = 0.5px */
  height: 200rpx;
  border-radius: 100rpx;
  margin: 100rpx 0;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  margin: 100rpx 0;
}

.goStudy {
  width: 220rpx;
  height: 80rpx;
  border: 2rpx solid #999;
  font-size: 28rpx;
  text-align: center;
  line-height: 80rpx;
}